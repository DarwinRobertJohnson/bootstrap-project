%head
    %link{rel:"stylesheet",href:"https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"}


.row.row-cols-4
    -for i in 0...imageLinks.length do
        .col
            .card
                %img.card-img-top{src:imageLinks[i]}
                    .card-body
                        %h5.card-title 
                            WoT book #{i+1}
                        %p.card-text 
                            An epic adventure fantasy novel, a must-read for any fantasy fan
                        %a.btn.btn-primary 
                            %p Check Availability
